<h1>All your walks</h1>
<div class="row">
  <div class="col s12 m6">
    <h2 class="header"> Coming up soon</h2>
    <div class="card horizontal">
  		<div class="card-stacked">
  			<ul>
          <% @walks[:upcoming_walks].each do |walk|%>
    				<div id="cards-content">
              <!--  Possible this iframe is in the wrong spot -->
              <div class="google-maps">
                <iframe src="//www.google.com/maps/embed/v1/directions?origin=<%= walk.starting_location %>
                  &destination=<%= walk.destination %>
                  &key=<%=ENV['GOOGLE_API_KEY_2']%>
                  &mode=walking" width="600", height="450" frameborder="0" style="border:0">
                </iframe>
              </div>

      				<li><%= walk.starting_location %></li>
      				<li><%= walk.accepted %></li>
      				<li><%= walk.requester.username %></li>
      				<li><%= walk.destination %></li>
      				<li><%= walk.walk_time %></li>

              <% if walk.accepted == false %>
      				  <%= link_to 'Enter Chat', walk.chatroom %>
      				<% end %>

            </div>

  			<% end %>
  			</ul>
  	  </div>
    </div>
  </div>

  <div class="col s12 m6">
    <h2 class="header"> How'd It Go?</h2>
    <div class="card horizontal">
      <div class="card-stacked">
        <ul>
          <% @walks[:recent_walks].each do |walk|%>
          <div id="cards-content">
          <li><%= walk.starting_location %></li>
          <li><%= walk.accepted %></li>
          <li><%= walk.requester.username %></li>
          <li><%= walk.destination %></li>
          <li><%= walk.walk_time %></li>
          <%= link_to "Review", '/' %>
          <!-- Link above is stubbed. Update before final presentation. -->
          </div>
        <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
